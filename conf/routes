GET         /shifts/:id                                                                                  controllers.Shifts.show(id: Long)
POST        /shifts                                                                                      controllers.Shifts.save()
POST        /shifts/:id/delete                                                                           controllers.Shifts.delete(id: Long)
POST        /shifts/:id/update                                                                           controllers.Shifts.update(id: Long)

# Users
GET         /users                                                                                       controllers.Users.all()
GET         /user/new                                                                                    controllers.Users.create()
GET         /users/:id                                                                                   controllers.Users.show(id: Long)
POST        /users                                                                                       controllers.Users.save()
POST        /users/:id/delete                                                                            controllers.Users.delete(id: Long)
POST        /users/:id/update                                                                            controllers.Users.update(id: Long)


GET         /course/:id_course/disciplines                                                               controllers.Disciplines.allByCourse(id_course: Long)
GET         /course/:id_course/discipline/:id_discipline                                                 controllers.Disciplines.showByCourse(id_course: Long, id_discipline: Long)

GET         /discipline/:id_discipline/user/:id_user/add                                                 controllers.Disciplines.addStudentDiscipline(id_discipline: Long, id_user: Long)
GET         /project/:id_project/user/:id_user/add                                                      controllers.Projects.addStudent(id_project: Long, id_user: Long)
GET         /project/:id_project/alluser/add                                                             controllers.Projects.addAllStudent(id_project: Long)

