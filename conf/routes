POST        /milestones                                                                                  controllers.Milestones.save()
POST        /milestones/:id/delete                                                                       controllers.Milestones.delete(id: Long)
POST        /milestones/:id/update                                                                       controllers.Milestones.update(id: Long)

# Disciplinas
